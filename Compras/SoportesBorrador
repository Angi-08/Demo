<script type="text/javascript">

    $(document).ready(function () {

        oForm.init();

    });


    var oForm = new function () {

        this.lstCompras = [];
        this.Url = null;
        this.UrlPDF = null;
        this.IdCompra = null;


        this.init = function () {




            var now = new Date();
            var date = new Date(now.getFullYear() - ((now.getMonth() + 1) > 0 ? 0 : 1), ((now.getMonth() + 1) - 1 + 12) % 12, 1);

            $("#ddlMes").val(date.getMonth() + 1);
            $("#ddlAnio").val(date.getFullYear());

            $("#ddlAnio").change(function () {

                oForm.ObtenerFacturas();

            });

            $("#ddlMes").change(function () {

                oForm.ObtenerFacturas();

            });

            $("#GenerarFacturacion").click(function () {

                $("#anio").val($("#ddlAnio").val());
                $("#mes").val($("#ddlMes").val());
                document.getElementById("formFacturacion").submit();

            });

            this.ObtenerFacturas();

        };



        this.mostrarFacturas = function () {

            var table = $('#tblFacturacion').DataTable();
            table.destroy();

            var htmlContent = "";

            if (this.lstCompras.length > 0) {

                for (var i = 0; i < this.lstCompras.length; i++) {

                    var item = this.lstCompras[i];

                    htmlContent += "<tr>";
                    htmlContent += "<td style='text-align:center'><b>" + item.Consecutivo + "</b></td>";
                    htmlContent += "<td>" + item.Numero + "</td>";
                    htmlContent += "<td>" + item.sResolucion + "</td>";
                    htmlContent += "<td>" + item.sProveedor + "</td>";
                    htmlContent += "<td style='text-align:right' >" + item.sValorTotal + "</td>";

                    if(item.lstCompraDetalle.length > 0){
                        htmlContent += "<td class='text-center' ><a class='btnOption' onclick='oForm.Detalle(this);' oData='" + JSON.stringify(item) + "' href='#' title='Editar'><i class='fa fa-search' aria-hidden='true'></i></a></td>";
                    }else{
                        htmlContent += "<td></td>";
                    }
                    

                    htmlContent += "<td class='text-center' ><a class='btnOption' onclick='oForm.Editar("+ item.IdCompra +");' href='#' title='Editar'><i class='fa fa-pencil-square' aria-hidden='true'></i></a></td>";
                    htmlContent += "<td class='text-center' ><a class='btnOption' onclick='oForm.mostrarEliminar("+ item.IdCompra +");' href='#' title='Eliminar'><i class='text-danger fa fa-trash' aria-hidden='true'></i></a></td>";

                    htmlContent += "</tr>";

                }

            } else {

                htmlContent = "<Strong>No se han encontrado registros con los criterios de búsqueda seleccionados.</Strong>"

            }

            this.cerrarloader();

            $("#tblFacturacion tbody").html(htmlContent);

            $("#tblFacturacion").DataTable({
                searching:true,
                ordering:true,
                paging:true,
                responsive:true,
                "language": {
                    "url": "http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                }
            });

        };

        this.Detalle = function (b) {

            var oFactura = JSON.parse($(b).attr("oData"));

            $("#Referencia").html("Factura : " + oFactura.Numero);

            var htmlContent = "";

            var htmlContent = "<table class='table table-striped table-bordered dataTable no-footer dtr-inline collapsed' cellpadding='10' cellspacing='5' style='width:100%'>";
            htmlContent += "<thead>";

            htmlContent += "<th style='text-align:center' >#</th>";
            htmlContent += "<th>Producto</th>";
            htmlContent += "<th style='text-align:right' >Unidades</th>";
            htmlContent += "<th style='text-align:right' >Valor</th>";
            htmlContent += "<th style='text-align:right' >Descuento</th>";
            htmlContent += "<th style='text-align:right' >IVA</th>";
            htmlContent += "<th style='text-align:right' >Total</th>";

            htmlContent += "</thead><tbody>";

            var TotalValor = 0;
            for (var i = 0; i < oFactura.lstCompraDetalle.length; i++) {

                var item = oFactura.lstCompraDetalle[i];

                htmlContent += "<tr>";

                htmlContent += "<td style='text-align:center'><b>" + item.Consecutivo + "</b></td>";
                htmlContent += "<td>" + item.sProducto + "</td>";
                htmlContent += "<td style='text-align:right' >" + this.formatear(item.Unidades) + "</td>";
                htmlContent += "<td style='text-align:right' >" + item.sValorUnitario + "</td>";
                htmlContent += "<td style='text-align:right' >" + item.sValorDescuento + "</td>";
                htmlContent += "<td style='text-align:right' >" + item.sImpuestoVentas + "</td>";

                var SubTotal = (item.ValorUnitario * item.Unidades)

                var total = (SubTotal -  item.ValorDescuento ) + item.ImpuestoVentas;

                htmlContent += "<td style='text-align:right' >" + item.sValorTotal  + "</td>";

                htmlContent += "</tr>";

                TotalValor += total;

            }

            htmlContent += "<tr>";

            htmlContent += "<td></td>";
            htmlContent += "<td></td>";
            htmlContent += "<td></td>";
            htmlContent += "<td></td>";
            htmlContent += "<td></td>";
            htmlContent += "<td style='text-align:right' ><b>TOTAL</b></td>";
            htmlContent += "<td style='text-align:right' ><b>" + oFactura.sValorTotal + "</b></td>";

            htmlContent += "</tr>";

            htmlContent += "</tbody></table>";

            $("#vDetalle").html(htmlContent);

            $("#mDetalles").modal({ show: true });

        };

        this.cerrarAsistente = function () {

            $("#mDetalles").modal("hide");
            $("#mEliminar").modal("hide");
            

        };

        this.ObtenerFacturas = function () {

            $("#vDatos").html("");

            this.mostrarloader();

            if ($("#ddlMes").val() != 0 && $("#ddlAnio").val() != 0) {

                var jsData = '{"m":"' + $("#ddlMes").val() + '", "a":"' + $("#ddlAnio").val() + '"  }';

                $.ajax({
                    url: this.Url + "BuscarComprasBorrador",
                    dataType: 'json',
                    contentType: "application/json",
                    type: "POST",
                    data: jsData,
                    success: function (data) {

                        oForm.lstCompras = data;
                        oForm.mostrarFacturas();

                    }
                });

            }

        };

        this.formatear = function (valor) {

            var signo = "";

            if(valor < 0){

                signo = "-";

            }

            var num = valor.toString().replace('-', '');

            if (!isNaN(num)) {
                num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
                num = num.split('').reverse().join('').replace(/^[\.]/, '');
                control = num;
            }

            return signo + num;

        };


        this.mostrarloader = function () {

            $("#loader").show();
            $("#dvTable").hide();

        };

        this.cerrarloader = function () {

            $("#loader").hide();
            $("#dvTable").show();

        };



        this.mostrarEliminar = function (idcompra) {

            this.IdCompra = idcompra;

            var htmlContent = "<table class='table table-striped table-bordered dataTable no-footer dtr-inline collapsed' cellpadding='10' cellspacing='5' style='width:100%'>";
            htmlContent += "<thead>";

            htmlContent += "<th style='text-align:center' >#</th>";
            htmlContent += "<th>Referencia</th>";
            htmlContent += "<th>Tercero</th>";
            htmlContent += "<th>Valor</th>";

            htmlContent += "</thead><tbody>";

            for (var i = 0; i < this.lstCompras.length; i++) {

                var item = this.lstCompras[i];

                if(item.IdCompra == idcompra){
                
                    htmlContent += "<tr>";
                    htmlContent += "<td style='text-align:center'><b>" + item.Consecutivo + "</b></td>";
                    htmlContent += "<td>" + item.Numero + "</td>";
                    htmlContent += "<td>" + item.sProveedor + "</td>";
                    htmlContent += "<td style='text-align:right' >" + item.sValorTotal + "</td>";
                    htmlContent += "</tr>";
                
                }


            }

            $("#vDetalleEliminar").html(htmlContent);

            $("#mEliminar").modal({ show: true });

        };

        this.Eliminar = function () {

                this.cerrarAsistente();
                this.mostrarloader();

                var jsData = '{"i":"' + this.IdCompra + '" , "m":"' + $("#ddlMes").val() + '", "a":"' + $("#ddlAnio").val() + '"  }';

                $.ajax({
                    url: this.Url + "EliminarCompraBorrador",
                    dataType: 'json',
                    contentType: "application/json",
                    type: "POST",
                    data: jsData,
                    success: function (data) {

                        oForm.lstCompras = data;
                        oForm.mostrarFacturas();

                    }
                });

        };

        

        this.Editar = function (idfactura) {

            console.log(idfactura);

            $("#IdCompraNueva").val(idfactura);
           
            document.getElementById("formFacturacion").submit();

        };






    }



</script>



<script type="text/javascript">

    oForm.lstCompras = null;
    oForm.Url = "/demo/Compras/";
    oForm.UrlPDF = "/demo/Reportes/Factura01.aspx?f=";

</script>


            </div>

        </div>

    </div>

